<div class="container">
  <h1>My MovieVault</h1>

  <div class="add-movie-form text-center well">
  <h2>Add a movie here!</h2>

  <%= form_for (@add_movie) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :note, "Note" %>
    <%= f.text_field :note %>

    <%= f.label :tag_list, 'Tags (separated by commas)' %>
    <%= f.text_field :tag_list, value: f.object.tag_list.to_s %>

    <%= f.submit "Add new movie", class: "btn btn-success" %>
    <% end %>
</div>

<div>
  <h3>Search:</h3>
  <input type="text" class="form-control" id="search-box">
</div>

<div>
    <h3>Filter Status:</h3>
    <%= select("movie", "filter_status", ["All", "Watched", "Unwatched"], selected: "All") %>
</div>

<div id='sort-alpha' class="text-center">
<!-- <h3>Click to Alphabetize List:</h3> -->
  <button id='sort-alpha-button'>Alphabetize this List Now</button>
</div>

<p></p>
<p></p>
<div id="return-data" class="panel panel-default">
    <h2>All My Movies</h2>
    <table id="movies-list" class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Note</th>
            <th>Tags</th>
            <th>Watched/Unwatched</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody id="movies-table">

        <% current_user.movies.each do |movie| %>
          <% if movie.watched %>
            <tr raw-id="<%= movie.id %>" id="movie-<%= movie.id %>" class="movie watched" data-status="Watched">
              <td class="movie-title"><%= movie.title %></td>
              <td class="movie-note"><%= movie.note %></td>
              <td class="movie-tag"><%= render movie.tags %></td>
              <td class="movie-status" id="watched-status"><%= link_to "Mark as Unwatched", movie_path(movie, watched: false), method: :patch %>
              </td>
              <td><%= link_to "Edit", edit_movie_path(movie) %></td>
            </tr>
          <% else %>
            <tr raw-id="<%= movie.id %>" id="movie-<%= movie.id %>" class="movie unwatched" data-status="Unwatched">
              <td class="movie-title"><%= movie.title %></td>
              <td class="movie-note"><%= movie.note %></td>
                <td class="movie-tag"><%= render movie.tags %></td>
              <td class="movie-status" id="watched-status"><%= link_to "Mark as Watched", movie_path(movie, watched: true), method: :patch %>
              </td>
              <td><%= link_to "Edit", edit_movie_path(movie) %></td>
            </tr>
          <% end %>
        <% end %>

    </tbody>
</table>

  </div>

</div>
